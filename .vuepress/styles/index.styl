@import url('https://rsms.me/inter/inter.css');

html
body
  font-family: 'Inter', sans-serif;

h1 a.header-anchor {
  font-family: "Poppins";
  padding-right: 0;
}

h1, h2, h3 {
  font-family: "Poppins";
  color: $titlesColor;
}

h1 > a.header-anchor, h2 > a.header-anchor, h3 > a.header-anchor {
  font-family: "Poppins";
  padding-right: 0;
}

body a {
  text-decoration: none !important;
}

a:hover {
  color: lighten($accentColor, 20%);
}

