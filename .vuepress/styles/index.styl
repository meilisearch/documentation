.custom-block
  .custom-block-title
    font-weight 600;
    margin-bottom -0.4rem;
  &.note
    padding .1rem 1.5rem;
    border-left-width .5rem;
    border-left-style solid;
    margin 1rem 0
  &.note
    background-color rgba(79, 85, 227, 0.1);
    border-color #4f55e3;
.code-copy
    position: sticky;
    left: 0px;
    svg {
      right: -6px;
      bottom: -6px !important;
    }

